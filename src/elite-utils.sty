\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{elite-utils}[2021/08/03 Elite Utlities]

% style utils

\newcommand{\important}[1]{{\textcolor{kit-red}{\fontseries{sb}\selectfont#1}}}
\newcommand{\highlight}[1]{{\textcolor{kit-green}{\fontseries{sb}\selectfont#1}}}
\newcommand{\formalWord}[1]{
    {\color{kit-blue}\texttt{#1}}
}

% text utils

\providecommand{\angled}[1]{\ensuremath{\langle} #1\ensuremath{\rangle}} % enclosed in angled brackets
\providecommand{\code}[1]{\texttt{#1}} % just wraps cotent in \texttt monospaced font

\providecommand{\emptyline}[0]{\vspace{1em}} % Please don't use this
\providecommand{\n}[0]{\emptyline} % Please don't use this

\providecommand{\todo}[1]{
    \defwarn{TODO}{#1}
    \PackageWarning{TODO}{#1}
}

% Figure Utils

\providecommand{\fig}[3][width=0.8\linewidth]{
    \begin{figure}[h]
        \centering
        \includegraphics[#1]{#3}
        \captionsetup{type=figure}
        \caption{#2}
    \end{figure}
}

% Wrapfig Command Parameters:
% 1 (optional): number of wrapping lines
% 2: orientation (l/c/r)
% 3: wrapfig size
% 4: caption
% 5: image
\providecommand{\wrapfig}[5][12]{
    \begin{wrapfigure}[#1]{#2}[0pt]{#3}
        \centering
        \includegraphics[width=\linewidth]{#5}
        \captionsetup{type=figure}
        \caption{#4}
    \end{wrapfigure}
}
