%Figures
\providecommand{\fig}[3][width=0.8\linewidth]{
    \parbox[t]{\linewidth}{
        \captionsetup{type=figure}
        \begin{center}
        \includegraphics[#1]{#3}
        \captionof{figure}{#2}
        \end{center}
    }
}

% Wrapfig Command Parameters:
% 1 (optional): dimensions of includegraphics image
% 2: orientation (l/c/r)
% 3: wrapfig size
% 4: caption
% 5: image
\providecommand{\wrapfig}[5][width=0.9\linewidth]{
    \begin{wrapfigure}{#2}{#3}
        \includegraphics[width=0.9\linewidth]{#5}
        \caption{#4}
    \end{wrapfigure}
}
